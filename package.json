{
    "name": "pj-backend",
    "version": "0.9.0",
    "description": "Back End for PaintingJoy.art",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "npx jest -i --coverage --verbose",
        "prepare": "husky install",
        "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version major && git push origin && git push origin --tags",
        "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version minor && git push origin && git push origin --tags",
        "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && npm version patch && git push origin && git push origin --tags"
    },
    "jest": {
        "testPathIgnorePatterns": [
            "/node_modules/",
            "config.js"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/booshja/Painting-Joy-backend.git"
    },
    "author": "Jacob Andes, jacobandes.dev",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/booshja/Painting-Joy-backend/issues"
    },
    "homepage": "https://github.com/booshja/Painting-Joy-backend#readme",
    "devDependencies": {
        "eslint": "^7.29.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "generate-changelog": "^1.8.0",
        "husky": "^6.0.0",
        "jest": "^27.0.5",
        "lint-staged": "^11.0.0",
        "nodemon": "^2.0.7",
        "prettier": "^2.3.2",
        "supertest": "^6.1.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,css}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{html,css,json}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "@sendgrid/mail": "^7.4.5",
        "axios": "^0.21.1",
        "bcrypt": "^5.0.1",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "helmet": "^4.6.0",
        "jsonschema": "^1.4.0",
        "jsonwebtoken": "^8.5.1",
        "morgan": "^1.10.0",
        "multer": "^1.4.2",
        "pg": "^8.6.0",
        "pg-format": "^1.0.4",
        "stripe": "^8.165.0"
    }
}
