{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://paintingjoy.art/messageNew.schema.json",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 40
        },
        "email": {
            "type": "string",
            "minLength": 1,
            "maxLength": 40
        },
        "message": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
        },
        "token": {
            "type": "string",
            "minLength": 1
        }
    },
    "additionalProperties": false,
    "required": ["name", "email", "message"]
}
