{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://paintingjoy.art/orderNew.schema.json",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
        },
        "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "price": {
            "type": "number"
        },
        "quantity": {
            "type": "integer"
        }
    },
    "additionalProperties": false,
    "required": ["name", "description", "price", "quantity"]
}
